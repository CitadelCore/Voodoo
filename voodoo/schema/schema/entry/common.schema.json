{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "folder": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "side": {
            "type": "string",
            "enum": ["CLIENT", "SERVER", "BOTH"]
        },
        "useOriginalUrl": {
            "type": "boolean",
            "description": "set to false to enable rehosting of files in modpack dsitribution"
        },
        "optional": {
            "type": "object",
            "properties": {
                "selected": {
                    "types": "boolean"
                },
                "recommended": {
                    "types": "string",
                    "enum": ["starred", "avoid"]
                },
                "files": {
                    "$ref": "../fnpattern.schema.json"
                }
            }
        },
        "fileName": {
            "type": "string"
        }
    },
    "additionalProperties": false
}
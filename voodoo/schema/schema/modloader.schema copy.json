{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": ["forge", "fabric"]
        }
    },
    "if": {
        "properties": {
            "type": {
                "const": "fabric"
            }
        },
        "required": ["type"]
    },
    "then":  {
        "$ref": "#/definitions/fabric"
    },
    "else": {
        "if": {
            "properties": {
                "type": {
                    "const": "forge"
                }
            },
            "required": ["type"]
        },
        "then": {
            "$ref": "#/definitions/forge"
        }
    },
    "definitions": {
        "fabric": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "fabric"
                },
                "intermediary": {
                    "type": "string"
                },
                "loader": {
                    "type": "string"
                },
                "installer": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "intermediary"
            ],
            "additionalProperties": false
        },
        "forge": {
            "type": "object",
            "properties": {
                "type": {
                    "const": "forge"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "version"
            ],
            "additionalProperties": false
        }
    }
}

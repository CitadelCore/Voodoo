{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": ["forge", "fabric"]
        }
    },
    "required": ["type"],
    "anyOf": [
        {
            "properties": {
                "type": {
                    "const": "fabric"
                },
                "intermediary": {
                    "type": "string"
                },
                "loader": {
                    "type": "string"
                },
                "installer": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "intermediary"
            ],
            "additionalProperties": false
        },
        {
            "properties": {
                "type": {
                    "const": "forge"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "version"
            ],
            "additionalProperties": false
        }
    ]
}
